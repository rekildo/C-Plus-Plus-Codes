#include<iostream>
using namespace std;

int main()
{	
	
	int n;
	cin>>n;

	 int count = 1;

	for(int i = 1; i<=n; i++) {
		for(int j = 1; j<=count; j++) {

			if(j % 2 == 0) 
				cout<<"*";
			else{
				cout<<i;
			}
			
		}
		count += 2;
		cout<<endl;
	}


	//lower triangle
	count -= 2;

	for(int i = n; i>=1; i--) {
		for(int j = 1; j<=count; j++) {

			if(j % 2 == 0) 
				cout<<"*";
			else{
				cout<<i;
			}
			
		}
		count -= 2;
		cout<<endl;
	}

}

#include<iostream>
using namespace std;

int main()
{	
	//Triangluar hollow pyramid

	int n;
	cin>>n;

	int space = -1;

	for(int i = 1; i<=n; i++) {
		
		for(int j = 1; j<=n-i; j++) {
			cout<<"  ";
		}
		
		if(i == 1 || i == n)
		{
			for(int j = 1; j<= 2*i-1; j++) {
				if(j%2 == 0)
				{
					cout<<"  ";
				}else{
					cout<<"* ";
				}
			}
		}else{
			
			cout<<"* ";
			for(int j = 1; j<=space; j++) {
				cout<<"  ";
				
			}
			cout<<"* ";

		}

		
		space += 2;

		cout<<endl;
	}


	return 0;
}

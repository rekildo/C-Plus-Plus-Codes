#include<iostream>
using namespace std;

int main()
{	int n;
	cin>>n;

	int num = -1;
	for(int i = 1; i<=n; i++) {
		for(int j = 1; j<=n-i; j++) {
			cout<<"  ";
		}
		num += 2;
		for(int j = 1; j<=num; j++) {
			if(j == 1 || j == num) 
			{
				cout<<"* ";
			}else{
				cout<<"  ";
			}
		}
	cout<<endl;
	}

	num = num + 2;
	
	//lower hollow triangle

	for(int i = n; i>=1; i--) {
		for(int j = 1; j<=n-i; j++) {
			cout<<"  ";
		}
		num -= 2;
		for(int j = 1; j<=num; j++) {
			if(j == 1 || j == num) 
			{
				cout<<"* ";
			}else{
				cout<<"  ";
			}
		}
	cout<<endl;
	}


	return 0;
}

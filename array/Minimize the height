#include<iostream>
#include<algorithm>
using namespace std;

void MinMaxHeight(int a[], int n, int k) {
	
	int ans = a[n-1]-a[0];

	int smallest = a[0]+k;
	int largest = a[n-1]-k;
	int mi,ma;

	for(int i = 0; i<n-1; i++) {
		mi = min(smallest,a[i+1]-k);
		ma = max(largest,a[i]+k);
		if(mi<0)continue;
		ans = min(ans,ma-mi);
	}
	cout<<ans;
}



int main()
{
	int arr[]= {1,5,8,10};
	int numOfElements  = sizeof(arr)/sizeof(arr[0]);
  int k; 
  cin>>k;
	MinMaxHeight(arr,numOfElements,k);

}

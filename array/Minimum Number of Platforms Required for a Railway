#include<iostream>
using namespace std;

int MinPlatform(int arr[], int dep[], int n) {

	int req_platform = 1;
	int i = 1;
	int j = 0;
	int result = 0;
	while(i < n && j<n)  {

		if(arr[i] <= dep[j]){
			req_platform++;
			i++;
		}else if(arr[i] > dep[j]){
			req_platform--;
			j++;
		}

		if(req_platform > result)
			result = req_platform;
	}

	return result;

}


int main()
{

	int arr[] = { 900, 940, 950, 1100, 1500, 1800 };
    int dep[] = { 910, 1200, 1120, 1130, 1900, 2000 };
    int n = sizeof(arr) / sizeof(arr[0]);

    cout << MinPlatform(arr,dep,n);
}

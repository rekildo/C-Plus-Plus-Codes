#include<iostream>
#include <algorithm>
// #include<string>
using namespace std;


void printArr(int arr[], int size) {
	for(int i = 0; i<size; i++) {
		cout<<arr[i]<<" ";
	}
}

void inputArr(int arr[], int size) {
	for(int i = 0; i<size; i++) {
		cin>>arr[i];
	}
}


void findTrip(int arr[], int n, int sum) {

	sort(arr,arr+n);

	for(int i = 0; i<n-2; i++) {
		int curr = arr[i];
		int j = i+1;
		int k = n-1;
		while(j<k) {
			if(arr[i] + arr[j] + arr[k] == sum) 
			{
				cout<<arr[i]<<" "<<arr[j]<<" "<<arr[k]<<endl;
				j++;
				k--;

			}else if(arr[i] + arr[j] + arr[k] > sum) {
				k--;
			}else{
				j++;
			}
		}
	}

}


int main()
{
	//using two pointer approach
	int arr[] = {-40, 3, 7, 4, 1, 8, -10, -30};
	int n = 8;
	int sum = -32;
	findTrip(arr, n, sum);





}

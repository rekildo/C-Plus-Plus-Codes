#include<iostream>
using namespace std;

void LinearSearch(int arr[], int size, int key) {
	
	for(int i = 0; i<size; i++) {
		if(key == arr[i]) 
			{	
			cout<<"key found" <<endl;
			return;
		}
	}


	cout<<"Key not Found"<<endl;
}


void takeArrInput(int arr[], int size) {
	cout<<"enter arrays elements: " << endl;
	for(int i = 0; i<size; i++) {
		cin>>arr[i];
	}
}

void takeArrOutput(int arr[],int size) {

	for(int i = 0; i<size; i++) {
		cout<<arr[i]<<" ";
	}
}


int main()
{	
	int n;
	cout<<"enter size of array: ";
	cin>>n;
	cout<<endl;

	int arr[n];
	takeArrInput(arr,n);

	int key;
	cout<<"enter the key : ";
	cin>>key;
	cout<<endl;



	LinearSearch(arr,n,key);

	

	return 0;
}

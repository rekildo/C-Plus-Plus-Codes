#include<iostream>
using namespace std;
	
int pivotElement(int a[], int n) {
	
	int total = 0;
	for(int i =0; i<n; i++) {
		total += a[i];
	}

	int left_sum = 0;
	for(int i = 0; i<n; i++) {

		if(i!=0) left_sum += a[i-1];
		if(total - left_sum - a[i] == left_sum)
			return i;		

	}


return -1;
}

int main()
{

	int arr[] = {1,2,3,2,1};
	
	int size = sizeof(arr)/sizeof(arr[0]);


	cout << "Pivot is at Index:  " << pivotElement(arr,size);

}

//the sum of value before and after the pivot should be equal

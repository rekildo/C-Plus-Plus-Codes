#include<iostream>
using namespace std;

void linearSearch(int arr[][3], int key, int row, int col) {
	int maxi = INT_MIN;
	for(int i  = 0; i<row; i++) {
		
		int sum =0;
		for(int j = 0; j<col; j++) {

			
			sum = sum + arr[j][i];
			maxi = max(sum,maxi);
		}
		cout<<"sum of col num " << i + 1 << " : " <<sum << endl;

	}
		cout<<endl<<"maximum sum is: " << maxi;
	
}

int main()
{	
	int arr[3][3] = {
					  {1,2,3},
					  {4,5,6},
					  {2,18,13}
					};
	int n = 3;

	 linearSearch(arr,13,3,3);
}
